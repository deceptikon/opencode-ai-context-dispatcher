#!/bin/bash
# Shell wrapper for vector store extension
# Usage: ctx-vector <command> <project_id> [args...]

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
PYTHON_SCRIPT="$SCRIPT_DIR/vector_store.py"

if [[ ! -f "$PYTHON_SCRIPT" ]]; then
    echo "Error: vector_store.py not found"
    exit 1
fi

# Check for Python venv
PYTHON_BIN="$HOME/.opencode/venv/bin/python"
if [[ ! -f "$PYTHON_BIN" ]]; then
    PYTHON_BIN="python3"
fi

if ! command -v "$PYTHON_BIN" &> /dev/null; then
    echo "Error: python bin not found"
    exit 1
fi

exec "$PYTHON_BIN" "$PYTHON_SCRIPT" "$@"
